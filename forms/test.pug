extends ../views/form/default-form

block append formConfig
	+formOptions({
		submitButtonName: "Create mailbox"
	})
	
	-var ticket = (form.queryparam.ticket) ? form.queryparam.action : "Saknas"
	-var category = (form.queryparam.category) ? form.queryparam.action : "Saknas"
	-var user = (form.queryparam.user) ? form.queryparam.action : "Saknas"

block formContent

	p Ticket #{ticket}
	p Category #{category}
	p User #{user}