extends ../views/form/default-form

block append formConfig
    +formOptions({
        submitButtonName: "Skicka in återkoppling",
        hideBackButton: true
    })

    -var ticket = (form.queryparam.ticket) ? form.queryparam.ticket : "Saknas"
    -var category = (form.queryparam.category) ? form.queryparam.category : "Saknas"
    -var user = (form.queryparam.user) ? form.queryparam.user : "Saknas"

    br
    center
      img(src='https://www.bravida.se/contentassets/841e69cb038d4ea0b05f76f758d93151/bravida_logo_rgb_neg.png' width='300')

block formContent

    h3 Har just detta ärende varit ett återkommande problem för dig?

    +formElement({
    type: 'radio',
    name: 'op0',
    required: true,
    selected: 'Nej',
    options: [
        {
            value: 'Ja',
            label: 'Ja'
        },
        {
            value: 'Nej',
            label: 'Nej'
        }
        ]
    })

    +formElement({
        type: "textarea",
        name: "reason",
        label: "Övrig kommentar?",
        required: {
            ifField: "op0",
            hasValue: ["Ja"]
        },
        visible: {
            ifField: "op0",
            hasValue: "Nej"
    }
    })

    hr

    h3 Hur nöjd är du med lösningen på ditt ärende?

    +formElement({
    type: 'radio',
    name: 'op1',
    required: true,
    options: [
        {
            label: '★ 1',
            value: '1'
        },
        {
            label: '★ 2',
            value: '2'
        },
        {
            label: '★ 3',
            value: '3'
        },
        {
            label: '★ 4',
            value: '4'
        },
        {
            label: '★ 5',
            value: '5'
        }
        ]
    })

    hr

    +formElement({
    type: 'radio',
    name: 'op2',
    label: 'Hur skulle du bedöma bemötandet under ärendets gång?',
    required: true,
    options: [
        {
            label: '♥ 1',
            value: '1'
        },
        {
            label: '♥ 2',
            value: '2'
        },
        {
            label: '♥ 3',
            value: '3'
        },
        {
            label: '♥ 4',
            value: '4'
        },
        {
            label: '♥ 5',
            value: '5'
        }
        ]
    })
    
    +formElement({
        type: "textarea",
        name: "reason",
        label: "Övrig kommentar?"
    })