extends ../views/form/default-form

block append formConfig
    +formOptions({
        submitButtonName: "Skicka in återkoppling",
        hideBackButton: true
    })

    -var id = (form.queryparam.id) ? form.queryparam.id : "Saknas"
    -var category = (form.queryparam.category) ? form.queryparam.category : "Saknas"
    -var user = (form.queryparam.user) ? form.queryparam.user : "Saknas"

    style.
        @import url("http://onify.xeb.se:3000/css/test.css");

    br
    center
      img(src='http://onify.xeb.se:3000/css/bravida_logo_cmyk_neg.png')

block formContent

    h3 Har just detta ärende varit ett återkommande problem för dig?

    +formElement({
    type: 'radio',
    name: 'op0',
    required: true,
    class: 'radio-toolbar',
    options: [
        {
            value: 'Ja',
            label: 'Ja'
        },
        {
            value: 'Nej',
            label: 'Nej'
        }
        ]
    })

    +formElement({
        type: "textarea",
        name: "reason",
        label: "Övrig kommentar?",
        visible: {
            ifField: "op0",
            hasValue: "Ja"
    }
    })

    hr

    h3 Hur nöjd är du med lösningen på ditt ärende?

    +formElement({
    type: 'radio',
    name: 'op1',
    required: true,
    class: 'radio-toolbar',
    options: [
        {
            label: '★ 1',
            value: '1'
        },
        {
            label: '★ 2',
            value: '2'
        },
        {
            label: '★ 3',
            value: '3'
        },
        {
            label: '★ 4',
            value: '4'
        },
        {
            label: '★ 5',
            value: '5'
        }
        ]
    })

    hr

    h3 Hur skulle du bedöma bemötandet under ärendets gång?

    +formElement({
    type: 'radio',
    name: 'op2',
    required: true,
    class: 'radio-toolbar',
    options: [
        {
            label: '♥ 1',
            value: '1',
        },
        {
            label: '♥ 2',
            value: '2'
        },
        {
            label: '♥ 3',
            value: '3'
        },
        {
            label: '♥ 4',
            value: '4'
        },
        {
            label: '♥ 5',
            value: '5'
        }
        ]
    })
    
    +formElement({
        type: "textarea",
        name: "reason",
        label: "Övrig kommentar?"
    })
    
    hr